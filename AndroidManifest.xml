<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qt.bracelet"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.SET_WALLPAPER"/>

    <application
        android:name="com.qt.bracelet.common.BraceletApp_"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <meta-data android:name="AA_DB_NAME" android:value="Bracelet.db" />
		<meta-data android:name="AA_DB_VERSION" android:value="1" />
		
        <activity
            android:name="com.qt.bracelet.activity.MainActivity_"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.BindBraceletActivity_" />
        <activity android:name=".activity.LoginActivity_" />
        <activity android:name=".activity.SettingActivity_" />
        <activity android:name=".activity.MotionActivity_" />
        <activity android:name=".activity.BloodPressureActivity_" />
        <activity android:name=".activity.PulseActivity_" />
        <activity android:name=".activity.TemperatureActivity_" />
        
        <service android:name=".server.ObtainVitalSignsServer_" />
    </application>

</manifest>
